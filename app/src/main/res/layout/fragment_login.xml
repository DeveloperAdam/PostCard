<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context="techease.com.postcard.Fragments.LoginFrag">
    <TextView
        android:id="@+id/tvpostcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSTCARD"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp">
             />
            <com.facebook.login.widget.LoginButton
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_margin="30sp"
                android:id="@+id/btnFB"/>
            <Button
                android:id="@+id/btnFbLogin"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="@drawable/facebookbutton"
                android:text="Facebook Login"
                android:layout_margin="25sp"
                android:textColor="#fff"
                />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:layout_marginLeft="30sp"
           />
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:background="@drawable/googlebutton"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="100sp"
            android:text="Google Sign In"
            android:textColor="#fff"
            />
        </FrameLayout>
        <Button
            android:id="@+id/btnContinueWithEmail"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/emailbutton"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:text="Continue with email"
            android:textColor="#fff"/>

    </LinearLayout>
</LinearLayout>
