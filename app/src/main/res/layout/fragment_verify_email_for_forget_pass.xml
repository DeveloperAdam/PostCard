<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techease.com.postcard.Fragments.VerifyEmailForForgetPass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitleVerifyEmailForgetPass"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@drawable/back"
            android:text="POSTCARD"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Enter the your email address here to
             verify your email"
            android:layout_gravity="center"/>

            <EditText
                android:id="@+id/etCodeForgetPass"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/edittext_back"
                android:layout_margin="30sp"
                android:inputType="number"
                android:hint="Code"
                android:paddingLeft="20sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Verify code"
            android:id="@+id/btnVerifyForgetPass"
            android:background="@drawable/dark_button"
            android:textColor="#fff"
            android:layout_margin="30sp"/>
    </LinearLayout>

</FrameLayout>
