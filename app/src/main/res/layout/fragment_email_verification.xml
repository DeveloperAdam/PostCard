<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techease.com.postcard.Fragments.EmailVerificationFrag">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="POSTCARD"
        android:textColor="#fff"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/tvTitleVerifyEmail"
        android:background="@drawable/back"/>
    <TextView
        android:id="@+id/someText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="A code has been sent to your email address,
type that code here to verify your email "/>
   <EditText
       android:id="@+id/etCode"
       android:layout_width="match_parent"
       android:layout_height="50sp"
       android:hint="Enter code here"
       android:paddingLeft="20sp"
       android:layout_marginRight="20sp"
       android:layout_marginLeft="20sp"
       android:layout_marginTop="50sp"
       android:background="@drawable/edittext_back"/>
    <Button
        android:id="@+id/btnVerifyCode"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Verify Code"
        android:textColor="#fff"
        android:background="@drawable/dark_button"
        android:layout_margin="30sp"/>
</LinearLayout>

</FrameLayout>
